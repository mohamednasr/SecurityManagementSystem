@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container-fluid ltr">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <img src="~/images/لوجو بايونير1.jpg" id="img-1" height="150px">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2 offset-md-3 col-md-6 col-sm-12 text-center">
                    <h2> تسجيل مستخدم جديد</h2>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-left">
                        <h4>Create a new account.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" placeholder="الايميل" class="form-control text-left" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input asp-for="Input.Username" placeholder="اسم المستخدم" class="form-control text-left" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" placeholder="كلمة المرور" class="form-control text-left" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" placeholder="تأكيد كلمة المرور" class="form-control text-left" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">تسجيل</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
