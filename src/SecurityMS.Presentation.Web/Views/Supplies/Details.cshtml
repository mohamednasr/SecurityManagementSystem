@model SecurityMS.Infrastructure.Data.Entities.Supply

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>تفاصيل التوريد</h1>

<div>
    <h4>Supply</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplyCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplyCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplyDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplyDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SuppliedFromName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SuppliedFromName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierType.Name)
        </dd>
        @if (Model.SupplyItems != null)
        {
            <h5>الأصناف</h5>
            @foreach (var item in Model.SupplyItems)
            {
                <div class="col-12">
                    <div class="row">
                        <dt class="col-sm-2">
                            @item.Item.Name
                        </dt>
                        <dd class="col-sm-10">
                            @item.ItemQuantity
                        </dd>
                    </div>
                </div>

            }
        }
    </dl>
</div>
<div>
    <a asp-action="Index">رجوع</a>
</div>
