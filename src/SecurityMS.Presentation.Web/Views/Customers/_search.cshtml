@model SecurityMS.Core.Models.CustomerModel;
@using SecurityMS.Core.Models.Enums;

<div class="text text-center font-weight-bold h2">
    بحث
</div>
<div class="row">
    <form asp-action="search" class="col-12">
        <div class="row">
            <div class="form-group col-3 px-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="الأسم" />
            </div>
            <div class="form-group px-2 col-3">
                <label asp-for="CommercialNumber" class="control-label"></label>
                <input asp-for="CommercialNumber" class="form-control" placeholder="السجل التجاري" />
            </div>
            <div class="form-group px-2 col-3">
                <label asp-for="TaxId" class="control-label"></label>
                <input asp-for="TaxId" class="form-control" placeholder="البطاقة الضريبية" />
            </div>
            <div class="form-group px-2 col-3">
                <label asp-for="CustomerTypeId" class="control-label"></label>
                <select asp-for="CustomerTypeId" class="form-control customerType" asp-items="ViewBag.CustomerTypes"></select>
            </div>

            <div class="form-group px-2 col-3" id="ParentCustomer">
                <label asp-for="ParentCustomerId" class="control-label"></label>
                <select asp-for="ParentCustomerId" class="form-control" asp-items="ViewBag.ParentCustomerId"></select>
            </div>
            <div class="form-group px-2 col-3">
                <label asp-for="GovernmentId" class="control-label"></label>
                <select asp-for="GovernmentId" class="form-control" asp-items="ViewBag.Governments" id="government"></select>
            </div>
           @* <div class="form-group px-2">
                <label asp-for="ZoneId" class="control-label"></label>
                <select asp-for="ZoneId" class="form-control" asp-items="ViewBag.Zones" id="zone"></select>
            </div>*@
            <div class="form-group px-4 pt-2">
                <button class="btn btn-primary mt-4" type="submit">بحث</button>
            </div>
        </div>
    </form>
</div>
