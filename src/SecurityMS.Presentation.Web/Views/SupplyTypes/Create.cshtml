@model SecurityMS.Infrastructure.Data.Entities.SupplyTypes

@{
    ViewData["Title"] = "إضافة نوع توريد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>إضافة نوع توريد</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplyName" class="control-label"></label>
                <input asp-for="SupplyName" class="form-control" />
                <span asp-validation-for="SupplyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-3 text-right">
        <a asp-action="Index" class="btn btn-default mt-3 mx-2">رجوع </a>
        <a asp-controller="Home" asp-action="Main" class="btn btn-default mt-3 mx-2">رجوع للرئيسية</a>
    </div>
</div>
