@model SecurityMS.Infrastructure.Data.Entities.SupplyItems

<div class="row exchange-item-row">
        <div class="form-group col-5">
        <label for="item_@(ViewBag.EmployeesCount)" class="control-label"></label>
        <select asp-for="ItemId" class="form-control item-name" asp-items="ViewBag.Items" id="item_@(ViewBag.ItemsCount)"></select>
        </div>
        <div class="form-group col-5">
        <label for="itemQuantity_@(ViewBag.EmployeesCount)" class="control-label"></label>
        <input asp-for="ItemQuantity" class="form-control item-quantity" id="itemQuantity_@(ViewBag.ItemsCount)" />
            <span asp-validation-for="ItemQuantity" class="text-danger"></span>
        </div>
        <div class="form-group pt-4" col-md-1>
            <a class="btn btn-danger remove-row mt-2"><i class="fas fa-minus text-white"></i></a>
        </div>
        <input type="hidden" value="@(ViewBag.ItemsCount)" class="items-count"/>
</div>