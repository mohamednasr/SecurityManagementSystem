@model SecurityMS.Core.Models.AttendanceModel
    <div class="row employee-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-4">
            <label asp-for="EmployeeId" class="control-label"></label>
            <select asp-for="EmployeeId" class="form-control employee-name" asp-items="ViewBag.EmployeeId"></select>
            @*<input asp-for="EmployeeId" class="typeahead form-control" type="text" placeholder="اسم الموظف" />*@
        </div>
        <div class="form-group col-md-3">
            <label asp-for="ShiftId" class="control-label"></label>
            <select asp-for="ShiftId" class="form-control employee-shift" asp-items="ViewBag.ShiftId"></select>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="AttendanceStatusId" class="control-label"></label>
            <select asp-for="AttendanceStatusId" class="form-control employee-status" asp-items="ViewBag.AttendanceStatusId"></select>
        </div>
        <div class="form-group pt-4" col-md-1>
            <a class="btn btn-danger remove-row mt-2"><i class="fas fa-minus text-white"></i></a>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
