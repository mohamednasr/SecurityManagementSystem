@using SecurityMS.Infrastructure.Data.Entities;
@model RewardEntity;

<div class="row employee-row">
    <div class="form-group col-sm-4 w-100">
        <label for="EmployeeId_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.Employee.Name)</label>
        <select asp-for="EmployeeId" class="form-control employee-name" id="employeeName_@(ViewBag.EmployeesCount)" asp-items="ViewBag.EmployeeId"></select>
    </div>
    <div class="form-group col-4">
        <label for="Amount_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.Amount)</label>
        <input asp-for="Amount" class="form-control reward-amount" id="Amount_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="col-4">
        <label asp-for="RewardType" class="control-label"></label>
        <div class="row">
        <div class="col-12 reward-type-options">

        <div class="form-check-inline">
                    <label class="form-check-inline" for="reward_@(ViewBag.EmployeesCount)">
                        <input name="RewardType_@(ViewBag.EmployeesCount)" type="radio" class="form-check-input reward-type" id="reward_@(ViewBag.EmployeesCount)" value="0" @(Model.RewardType == 0 ? "checked" : "")>
                مكافأه (أيام)
            </label>
        </div>
        <div class="form-check-inline">
                    <label class="form-check-inline" for="Incentive_@(ViewBag.EmployeesCount)">
                        <input name="RewardType_@(ViewBag.EmployeesCount)" type="radio" class="form-check-input reward-type" id="Incentive_@(ViewBag.EmployeesCount)" value="1" @(Model.RewardType == 1 ? "checked" : "")>
                حافز (مبلغ)
            </label>
        </div>
        </div>
        </div>
    </div>
    <div class="form-group col-4">
        <label for="RewardDate_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.RewardDate)</label>
        <input asp-for="RewardDate" type="date" class="form-control reward-date" id="RewardDate_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="RewardDate" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label for="Reason_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.Reason)</label>
        <input asp-for="Reason" type="text" class="form-control reward-reason" id="Reason_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <div class="form-group pt-4">
        <a class="btn btn-danger remove-row mt-2"><i class="fas fa-minus text-white"></i></a>
    </div>
    <div class="form-group col-12">
        <hr />
    </div>
</div>