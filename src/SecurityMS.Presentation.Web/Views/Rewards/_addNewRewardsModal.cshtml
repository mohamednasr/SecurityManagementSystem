@model SecurityMS.Core.Models.SiteRewardsModel;

<div class="modal fade" id="RewardsModal" tabindex="-1" aria-labelledby="RewardsModal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <form asp-action="CreateSiteAdvancedPayment" asp-controller="Rewards">
                <div class="modal-header">
                    <h5 class="modal-title">اضافه سلفه</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="form-group col-sm-12 w-100">
                            <label id="SiteId" class="control-label"></label>
                            <select id="SiteId" name="SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
                        </div>
                        <div class="col-12">
                            <label asp-for="RewardType" class="control-label"></label>
                            <div class="form-check-inline">
                                <label class="form-check-inline" for="reward">
                                    <input asp-for="RewardType" type="radio" class="form-check-input customerType" id="reward" value="0">
                                    مكافأه (أيام)
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <label class="form-check-inline" for="Incentive">
                                    <input asp-for="RewardType" type="radio" class="form-check-input customerType" id="Incentive" value="1">
                                    حافز (مبلغ)
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="RewardDate" class="control-label"></label>
                            <input asp-for="RewardDate" type="date" class="form-control" />
                            <span asp-validation-for="RewardDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Reason" class="control-label"></label>
                            <input asp-for="Reason" class="form-control" />
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">الغاء</button>
                    <button class="btn btn-primary" type="submit">اضافه</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    }