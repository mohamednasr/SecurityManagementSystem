@using SecurityMS.Infrastructure.Data.Entities;
@model AdvancedPaymentEntity;

<div class="row employee-row">
    <div class="form-group col-sm-4 w-100">
        <label for="EmployeeId_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.EmployeeId)</label>
        <select asp-for="EmployeeId" class="form-control employee-name" id="employeeName_@(ViewBag.EmployeesCount)" asp-items="ViewBag.EmployeeId"></select>
    </div>
    <div class="form-group col-4">
        <label for="Amount_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.Amount)</label>
        <input asp-for="Amount" class="form-control payment-amount" id="Amount_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label for="PaymentDate_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.PaymentDate)</label>
        <input asp-for="PaymentDate" type="date" class="form-control payment-date" id="PaymentDate_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label for="InstallmentDate_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.InstallmentDate)</label>
        <input asp-for="InstallmentDate" type="date" class="form-control installment-date" id="InstallmentDate_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="InstallmentDate" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label for="installments_@(ViewBag.EmployeesCount)" class="control-label">@Html.DisplayNameFor(model => model.installments)</label>
        <input asp-for="installments" class="form-control installments" id="installments_@(ViewBag.EmployeesCount)" />
        <span asp-validation-for="installments" class="text-danger"></span>
    </div>
    <div class="form-group pt-4">
        <a class="btn btn-danger remove-row mt-2"><i class="fas fa-minus text-white"></i></a>
    </div>
    <div class="form-group col-12">
        <hr />
    </div>
</div>