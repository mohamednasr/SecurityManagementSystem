@using SecurityMS.Infrastructure.Data.Entities;
@model AdvancedPaymentEntity;

<div class="row employee-row">
    <div class="form-group col-sm-4 w-100">
        <label asp-for="EmployeeId" class="control-label"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
    </div>
    <div class="form-group col-4">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label asp-for="PaymentDate" class="control-label"></label>
        <input asp-for="PaymentDate" type="date" class="form-control" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label asp-for="InstallmentDate" class="control-label"></label>
        <input asp-for="InstallmentDate" type="date" class="form-control" />
        <span asp-validation-for="InstallmentDate" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label asp-for="installments" class="control-label"></label>
        <input asp-for="installments" class="form-control" />
        <span asp-validation-for="installments" class="text-danger"></span>
    </div>
    <div class="form-group pt-4">
        <a class="btn btn-danger remove-row mt-2"><i class="fas fa-minus text-white"></i></a>
    </div>
    <div class="form-group col-12">
    <hr />
    </div>

</div>