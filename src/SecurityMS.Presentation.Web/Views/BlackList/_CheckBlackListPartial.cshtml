@model SecurityMS.Infrastructure.Data.Entities.BlackListEntity;

    <div class="text text-center font-weight-bold h2">
        تحقق من عدم الإدراج بمخالفات شركات الأمن
    </div>
    <div class="row">
        <form asp-action="Search" class="col-12">
            <div class="row">
                <div class="form-group col-lg-4 col-md-6 col-sm-12 text-center">
                    <input asp-for="Name" class="form-control" placeholder="الأسم" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4 col-md-6 col-sm-12 text-center">
                    <input asp-for="Company" class="form-control" placeholder="الشركة" />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4 col-md-6 col-sm-12 text-center">
                    <input asp-for="Nat_Id" class="form-control" placeholder="الرقم القومي" />
                    <span asp-validation-for="Nat_Id" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <button class="btn btn-primary w-25" type="submit">بحث</button>
                </div>
            </div>
        </form>
    </div>

