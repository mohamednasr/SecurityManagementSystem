@model SecurityMS.Infrastructure.Data.Entities.Purchases

@{
    ViewData["Title"] = "أمر شراء";
}


<h3>بيانات أمر شراء</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseCode)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.PurchaseDate.ToShortDateString()
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.SupplierName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplyTypeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplyType.SupplyName)
        </dd>
        @for(int i = 0; i < Model.Items.Count; i++){
            <hr class="w-100"/>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemId)
            </dt>
            <dd class = "col-sm-10">
                @(Model.Items[i].Item.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Quantity)
            </dt>
            <dd class = "col-sm-10">
                @(Model.Items[i].Quantity)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().SuppliedQuantity)
            </dt>
            <dd class = "col-sm-10">
                @(Model.Items[i].SuppliedQuantity)
            </dd>
        }
    </dl>
    
<div>
    <a class="btn btn-default" onclick="back()">رجوع</a>
</div>
</div>
