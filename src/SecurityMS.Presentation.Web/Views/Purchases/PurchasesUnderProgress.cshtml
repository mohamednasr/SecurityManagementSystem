@model IEnumerable<SecurityMS.Infrastructure.Data.Entities.Purchases>

@{
    ViewData["Title"] = "اوامر شراء تحت التوريد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>اوامر شراء تحت التوريد</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplyType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplyType.SupplyName)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
