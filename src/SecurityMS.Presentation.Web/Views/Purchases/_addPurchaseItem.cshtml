@model SecurityMS.Infrastructure.Data.Entities.PurchaseItem
<div class="row item-row">
    <div class="form-group col-3">
        <label class="control-label">@Html.DisplayNameFor(model => model.ItemId)</label>
        <select class="form-control itemsId" asp-items="ViewBag.Items"></select>
        <span asp-validation-for="ItemId" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control quantities" value="0" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group pt-4" col-md-1>
        <a class="btn btn-danger remove-row mt-2"><i class="fas fa-minus text-white"></i></a>
    </div>
</div>


    @section Scripts {
        @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

    }