@model IEnumerable<SecurityMS.Infrastructure.Data.Entities.BankAccountsEntity>


@{
    ViewData["Title"] = "حسابات البنوك";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>قائمة حسابات البنوك</h1>
<h4>عدد الحسابات : @ViewBag.AccountsNumber</h4>
<h4>مجموع الرصيد الحالي للحسابات : @ViewBag.total</h4>
<p>
    <a asp-action="Create">اضافة حساب بنك جديد</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IBAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentBalance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
             @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IBAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningBalance)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.CurrentBalance)
            </td>
            <td>
                <a asp-action="Index" asp-controller="BankTransactions" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>

            </td>
        </tr>
}
        }
       
    </tbody>
</table>
