@model IEnumerable<SecurityMS.Core.Models.ZoneModel>
@using SecurityMS.Core.Models;
@{
    ViewData["Title"] = "المناطق";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>المناطق</h1>

<partial name="_FilterZonesPartial" model="new ZoneModel()" />
<hr />


<div class="row">
    <div class="col-12 mb-3">
        <a asp-action="Create" class="btn btn-dark mb-3"><i class="fas fa-plus"></i> إضافة منطقة</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Government)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Government.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-12 mt-3 text-right">
        <a asp-controller="Home" asp-action="Main" class="btn btn-default mt-3 mx-2">رجوع للرئيسية</a>
    </div>
</div>