@model SecurityMS.Infrastructure.Data.Entities.SiteEmployeesEntity

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>تعديل وظائف الموقع</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SiteId" class="control-label"></label>
                <select asp-for="SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
                <span asp-validation-for="SiteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobId" class="control-label"></label>
                <select asp-for="JobId" class="form-control" asp-items="ViewBag.JobId"></select>
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftTypeId" class="control-label"></label>
                <select asp-for="ShiftTypeId" class="form-control" asp-items="ViewBag.ShiftTypeId"></select>
                <span asp-validation-for="ShiftTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftValue" class="control-label"></label>
                <input asp-for="ShiftValue" class="form-control" />
                <span asp-validation-for="ShiftValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeShiftSalary" class="control-label"></label>
                <input asp-for="EmployeeShiftSalary" class="form-control" />
                <span asp-validation-for="EmployeeShiftSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeesPerShift" class="control-label"></label>
                <input asp-for="EmployeesPerShift" class="form-control" />
                <span asp-validation-for="EmployeesPerShift" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-link" onclick="back()">رجوع</a>
</div>
