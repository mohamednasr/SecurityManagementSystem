@using System.Collections.Generic;
@model List<SecurityMS.Infrastructure.Data.Entities.SalaryReportDetails>;

@*<partial name="_SearchSalaryReportPartial" model="Model.searchModel" />*@
<div class="text text-center font-weight-bold h2">
    تقرير المرتبات
</div>
<hr />

<div class="row">
    <div class="col-12 mb-3">
        <a asp-action="CreateSalaryReport" class="btn btn-dark mb-3"><i class="fas fa-plus"></i> انشاء تقرير رواتب</a>
    </div>
</div>


<div class="row">
    <div class="col-12">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Site.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().SalaryDateFrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().SalaryDateTo)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Site.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.SalaryDateFrom)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.SalaryDateTo)
                        </td>
                        <td>
                            <a asp-action="SalaryReportData" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> 
                         @*   @{
                                var parms = new Dictionary<string, string>
                                {
                        { "SalaryDateFrom", item.SalaryDateFrom.ToString() },
                        { "SalaryDateTo", item.SalaryDateTo.ToString() },
                        { "SiteId", item.SiteId.ToString() },
                                };
                                <a asp-action="ReviewSalaries" asp-all-route-data="parms"><i class="fas fa-pencil-alt"></i></a>
                            }*@

                            @*<a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>*@
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>