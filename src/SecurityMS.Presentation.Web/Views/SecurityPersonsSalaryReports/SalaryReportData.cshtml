@model SecurityMS.Infrastructure.Data.Entities.SalaryReportDetails;

<div class="text text-center font-weight-bold h2">
    تقرير المرتبات
</div>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalaryDateFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalaryDateFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalaryDateTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalaryDateTo)
        </dd>
    </dl>
</div>
<hr />
<div class="row">
    <div class="col-12">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().Employee.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().BaseSalary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().MonthSalary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().Rewards)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().Insurance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().Penalities)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().AdvancePaymentInstallment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().Taxes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().ExtraDeductions)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeesSalaries.FirstOrDefault().TotalSalary)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.EmployeesSalaries)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BaseSalary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MonthSalary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Insurance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Penalities)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rewards)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdvancePaymentInstallment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Taxes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExtraDeductions)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalSalary)
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>