@model SecurityMS.Core.Models.SalarySearchModel;

<div class="text text-center font-weight-bold h2">
    تصفيه تقرير المرتبات
</div>
<div class="row">
    <form asp-action="Index" class="col-12">
        <div class="row">
            <div class="form-group col-lg-4 col-md-6 col-sm-12 text-center">
                <input asp-for="EmployeeName" class="form-control" placeholder="الأسم" />
            </div>
            <div class="form-group col-lg-4 col-md-6 col-sm-12 text-center">
                <select asp-for="Year" id="yearSelect" class="form-control">
                </select>
            </div>
            <div class="form-group col-lg-4 col-md-6 col-sm-12 text-center">
                <select asp-for="Month" id="monthSelect" class="form-control">
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-primary w-25" type="submit">بحث</button>
            </div>
        </div>
    </form>
</div>
