@model IEnumerable<SecurityMS.Infrastructure.Data.Entities.ItemEntity>

@{
    ViewData["Title"] = "حد اعاده الطلب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>تقرير اصناف تحت حد اعاده الطلب</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableTotalCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumAlert)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableTotalCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumAlert)
            </td>
        </tr>
}
    </tbody>
</table>
