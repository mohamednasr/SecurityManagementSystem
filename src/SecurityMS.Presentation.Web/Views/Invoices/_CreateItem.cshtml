@model SecurityMS.Infrastructure.Data.Entities.InvoiceDetails

<div class="row">
    <div class="col-md-12">
        <form asp-action="View">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-3">
                    <label asp-for="Count" class="control-label"></label>
                    @*<input asp-for="Count" class="form-control" />*@
                      <label class="control-label d-block">@Model.Count</label>
                    @*<span asp-validation-for="Count" class="text-danger"></span>*@
                </div>
                <div class="form-group col-3">
                    <label asp-for="Price" class="control-label"></label>
                    @*<input asp-for="Price" class="form-control" />*@
                    <label class="control-label d-block">@Model.Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="Total" class="control-label"></label>
                    @*<input asp-for="Total" class="form-control" />*@
                    <label class="control-label d-block">@Model.Total</label>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="ItemName" class="control-label"></label>
                    @*<input asp-for="ItemName" class="form-control" />*@
                      <label class="control-label d-block">@Model.ItemName</label>
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>


