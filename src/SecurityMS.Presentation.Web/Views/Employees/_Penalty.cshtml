@model SecurityMS.Infrastructure.Data.Entities.PenaltyEntity;
<div class="modal fade" id="penaltyModal" tabindex="-1" aria-labelledby="penaltyModal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">اضافه خصم / جزاء</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Penalties" class="row" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-4">
                        @*<label asp-for="EmployeeId" class="control-label"></label>*@
                        <input asp-for="EmployeeId" hidden class="form-control" />
                        @*<span asp-validation-for="EmployeeId" class="text-danger"></span>*@
                    </div>
                    <div class="col-12">
                        <label asp-for="PenaltyType" class="control-label"></label>
                        <div class="form-check-inline">
                            <label class="form-check-inline" for="penaltyDays">
                                <input asp-for="PenaltyType" type="radio" class="form-check-input customerType" id="penaltyDays" value="0">
                                جزاء (مبلغ)
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-inline" for="salaryDiscount">
                                <input asp-for="PenaltyType" type="radio" class="form-check-input customerType" id="salaryDiscount" value="1">
                                خصم (أيام)
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="PenalityDate" class="control-label"></label>
                        <input asp-for="PenalityDate" type="date" class="form-control" />
                        <span asp-validation-for="PenalityDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Reason" class="control-label"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
